    <thead>
        <tr>
            <th>Title</th>
            <th>Amount</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var expense in Model.Expenses)
        {
            <tr>
                <td>@expense.Title</td>
                <td>NPR @expense.Amount.ToString()</td>
                <td>@expense.ExpenseDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
