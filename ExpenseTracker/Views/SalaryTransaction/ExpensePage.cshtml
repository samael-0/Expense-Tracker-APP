<script>
    document.getElementById('addSalaryForm').addEventListener('submit', function () {
            const year = document.getElementById('yearDropdown').value;
            let month = document.getElementById('monthDropdown').value;

            if (month.length === 1) {
                month = '0' + month;
            }

            const monthYear = `${year}-${month}`;
            document.getElementById('monthYearInput').value = monthYear;
        });


</script>

